                    <!--</android.support.design.widget.TextInputLayout>-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textNearWhite">

                        <EditText
                            android:id="@+id/product_cgst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_product_cgst"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/textNearWhite"
                            android:textColor="@color/textNearWhite"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textNearWhite">

                        <EditText
                            android:id="@+id/product_sgst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_product_sgst"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/textNearWhite"
                            android:textColor="@color/textNearWhite"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textNearWhite">

                        <EditText
                            android:id="@+id/product_purchase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_purchase_price"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/textNearWhite"
                            android:textColor="@color/textNearWhite"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/disc_1_type"
                        android:layout_width="wrap_content"
                        android:textColor="@color/textNearWhite"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.AppCompatSpinner>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textNearWhite">

                        <EditText
                            android:id="@+id/disc_1_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/textNearWhite"
                            android:textColor="@color/textNearWhite"
                            android:visibility="gone"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/disc_2_type"
                        android:layout_width="wrap_content"
                        android:textColor="@color/textNearWhite"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.AppCompatSpinner>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textNearWhite">

                        <EditText
                            android:id="@+id/disc_2_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/textNearWhite"
                            android:textColor="@color/textNearWhite"
                            android:visibility="gone"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textNearWhite">

                        <EditText
                            android:id="@+id/product_tsp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_tsp"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/textNearWhite"
                            android:textColor="@color/textNearWhite"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/textNearWhite">

                        <EditText
                            android:id="@+id/product_mrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_mrp"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/textNearWhite"
                            android:textColor="@color/textNearWhite"
                            android:maxLines="1"/>

                    </android.support.design.widget.TextInputLayout>

                    <!--<android.support.v7.widget.AppCompatSpinner-->
